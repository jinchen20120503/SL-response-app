<script>
    const MY_LIFF_ID = "2008893793-yX4b4Sq4"; 
    const GAS_URL = "https://script.google.com/macros/s/AKfycbwTewNiTNZSBcjihfXmeO0V262dAZR0KOpg4sifghATT-XL4bhAqh4Kx5Fc6fw2CUgb/exec";

    window.onload = function() {
        const d = new Date();
        document.getElementById('date').value = d.getFullYear() + "-" + String(d.getMonth() + 1).padStart(2, '0') + "-" + String(d.getDate()).padStart(2, '0');
        initLiff();
    };

    async function initLiff() {
        try {
            await liff.init({ liffId: MY_LIFF_ID });
            if (!liff.isLoggedIn()) {
                liff.login();
            } else {
                const profile = await liff.getProfile();
                document.getElementById('userName').value = profile.displayName;
            }
        } catch (e) {
            document.getElementById('userName').value = "ä½¿ç”¨è€…";
        }
    }

    document.getElementById('fileInput').onchange = function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = (event) => {
                const preview = document.getElementById('preview');
                preview.src = event.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    };

    function submitReport() {
        const orderId = document.getElementById('orderId').value;
        const desc = document.getElementById('description').value;
        const overlay = document.getElementById('statusOverlay');
        const statusMsg = document.getElementById('statusMessage');
        const btn = document.getElementById('submitBtn');

        if (!orderId || !desc) { alert("è«‹å¡«å¯«å·¥ä»¤èˆ‡èªªæ˜"); return; }

        // é¡¯ç¤ºé®ç½©ä¸¦ç¦ç”¨æŒ‰éˆ•
        btn.disabled = true;
        overlay.style.display = 'block';
        statusMsg.innerHTML = "ç³»çµ±è™•ç†ä¸­ï¼Œè«‹ç¨å€™...";

        const file = document.getElementById('fileInput').files[0];
        
        const sendToGas = (imgBase64 = null) => {
            const payload = {
                date: document.getElementById('date').value,
                name: document.getElementById('userName').value,
                orderId: orderId,
                description: desc,
                hasPhoto: imgBase64 ? "âœ… æœ‰" : "âŒ ç„¡",
                image: imgBase64
            };

            fetch(GAS_URL, {
                method: "POST",
                body: JSON.stringify(payload)
            })
            .then(res => res.text())
            .then(text => {
                // æ›´æ–°æç¤ºç‚ºæˆåŠŸï¼Œä¸¦è¨­å®š 2 ç§’å¾Œé—œé–‰
                statusMsg.innerHTML = "ğŸ‰ å›å ±æˆåŠŸï¼<br>ç•«é¢å³å°‡é—œé–‰...";
                setTimeout(() => {
                    liff.closeWindow();
                }, 2000);
            })
            .catch(err => {
                overlay.style.display = 'none';
                alert("å‚³é€å‡ºéŒ¯ï¼Œè«‹é‡æ–°é€å‡ºå›å ±");
                btn.disabled = false;
            });
        };

        if (file) {
            const r = new FileReader();
            r.onload = (e) => sendToGas(e.target.result);
            r.readAsDataURL(file);
        } else {
            sendToGas();
        }
    }
</script>
